{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Jest Debug",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest", // Path to Jest runner
            "cwd": "${workspaceFolder}", // Working directory (your project root)
            "args": [
              "--runInBand", // Run tests serially for debugging
              "--watch", // Watch for file changes and rerun tests
              "--no-cache" // Disable Jest cache
            ],
            "console": "integratedTerminal", // Show test output in integrated terminal
            "internalConsoleOptions": "neverOpen" // Prevent opening a separate terminal
          }
    ]
}